@model IEnumerable<BoardGameInventory.Models.ExpansionModels.ExpansionListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ExpansionID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpansionTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChangesToBaseGame)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExpansionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpansionTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangesToBaseGame)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ExpansionID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ExpansionID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ExpansionID })
            </td>
        </tr>
    }

</table>
